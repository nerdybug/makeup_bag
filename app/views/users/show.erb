<h1><%=@user.username%>'s Makeup Bag</h1>
<br>
<a href="/items/add">Add an item to your bag</a>
<br><br>

<%if @user.items.empty?%>
	<p>Your bag is empty.</p>
<%else%>
	<%@user.items.each do |item|%>
  <ul>
    <li><p><%=item.name%> <%=item.type_of_item%> - <%=item.color%></p></li>
  </ul>
	<%end%>
<%end%>
<br>
<a href="/logout">Logout</a>
